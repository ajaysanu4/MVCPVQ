@model MVCTEST.Models.User

@{
    ViewBag.Title = "getUserId";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<style>
    .justify-content-center {
        margin-top: 20px;
        font-family: "arial";
        font-size: 14px;
    }

    .btn {
        background-color: rgb(0, 106, 195);
        color: white;
        border-radius: 0%;
        width: 137px;
        height: 50px;
    }

    input {
        overflow: visible;
        height: 55px;
        width: 1140px;
        border: 1px solid rgb(0, 106, 195);
    }

    .form-group {
        margin-bottom: 15px;
        margin-left: -15px;
    }

    .footer-button {
        padding-top: 30px;
    }

    .content {
        margin-top: 60px;
    }
</style>

<div class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Submit your User Id to Reset</h2>
            <h4>Answer the Question below to verify your Identity</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="input-group input-group-lg">
                @Html.Label("User ID")
            </div>

            <div class="input-group input-group-lg">
                @Html.TextBoxFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control col-md-10 " } })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                <p style="color:red;font-weight:200">@TempData["message"]</p>
            </div>
        </div>

        <div class="form-group">
            <div class=" col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />&nbsp;<input type="button" value="Cancel" class="btn btn-primary"
                                                                                           onclick="javascript:document.location.href='@Url.Action("Index", "Home")'" />
            </div>
        </div>
    }
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>
