@model MVCTEST.Models.User

@{
    ViewBag.Title = "PasswordReset";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<style>
    .justify-content-center {
        margin-top: 20px;
        font-family: "arial";
        font-size: 14px;
    }

    .btn {
        background-color: rgb(0, 106, 195);
        color: white;
        border-radius: 0%;
        width: 137px;
        height: 50px;
    }

    input {
        overflow: visible;
        height: 55px;
        width: 1140px;
        border: 1px solid rgb(0, 106, 195);
    }

    .form-group {
        margin-bottom: 15px;
        margin-left: -15px;
    }

    .footer-button {
        padding-top: 30px;
    }

    .content {
        margin-top: 60px;
    }
</style>


<div class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>PasswordReset</h2>
            <h4>Set your new password here</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("User ID")
                </div>

                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserID, new { htmlAttributes = new { @class = "form-control col-md-10" } })
                    @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("New Password")
                </div>

                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-10" } })               
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <p style="color:lightseagreen;font-weight:200">@TempData["message"]</p>
            </div>
            <div class="input-group-btn footer-button">
                <input type="submit" value="Submit" class="btn btn-primary" />&nbsp;<input type="button" value="Cancel" class="btn btn-primary"
                                                                                           onclick="javascript:document.location.href='@Url.Action("Index", "Home")'" />
            </div>
        </div>
    }
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>