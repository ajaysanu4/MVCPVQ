@model MVCTEST.Models.pvqviewmodel

@{
    ViewBag.Title = "Question1";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<h2>Reset Your Password</h2>

<style>
    .content {
        margin-top: 60px;
    }
</style>
<div class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Answer the Question below to verify your Identity</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label(Model.Question)
                </div>

                <div class="col-md-10">
                    @Html.EditorFor(model => model.Useranswer, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Useranswer, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class=" col-md-10">
                    <input type="submit" value="Submit and Continue" class="btn btn-primary" />&nbsp;<input type="button" value="Cancel" class="btn btn-primary"
                                                                                                            onclick="javascript:document.location.href='@Url.Action("Index", "Home")'" />
                </div>
            </div>
        </div>
    }
    </div>